<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:paddingLeft="@dimen/_50dp"
    android:paddingRight="@dimen/_50dp"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13"/>


    <EditText
        android:id="@+id/edt_phone_number"
        style="@style/style_edt"
        android:background="@drawable/ic_bkg_edt"
        android:backgroundTint="@android:color/white"
        android:digits="0123456789+"
        android:ellipsize="end"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:hint="Số điện thoại..."
        android:imeOptions="actionNext"
        android:inputType="textNoSuggestions|textFilter|number"
        android:maxLines="1"
        android:padding="@dimen/_4dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textColorHint="@color/color_Hint_text_login"
        android:textSize="@dimen/_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.15" />

    <com.mylibrary.ui.input.CustomInputText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_eye_password"
        android:ellipsize="end"
        android:inputType="textPassword"
        android:maxLines="1"
        android:background="@drawable/ic_bkg_edt"
        android:scrollHorizontally="true"
        android:imeOptions="actionDone"
        android:textColor="@android:color/white"
        android:textColorHint="@color/color_Hint_text_login"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:hint="Mật khẩu..."
        android:textSize="@dimen/_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_phone_number"
        app:layout_constraintVertical_bias="0.07" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_btn_click_firts"
        android:fontFamily="@font/sf_pro_text_medium"
        android:text="Đăng nhập"
        android:textAllCaps="false"
        android:textColor="@color/colorSearch"
        android:textSize="@dimen/_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_password"
        app:layout_constraintVertical_bias="0.12" />

    <TextView
        android:id="@+id/btn_forgot_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:text="Quên mật khẩu?"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.1"/>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bkg_btn_click_tao_tai_khoan"
        android:fontFamily="@font/sf_pro_text_medium"
        android:text="Tạo tài khoản mới"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        app:layout_constraintVertical_bias="0.33" />

</androidx.constraintlayout.widget.ConstraintLayout>