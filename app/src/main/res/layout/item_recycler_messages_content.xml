<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_item_recycler_view_messages"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/_12dp"
    android:paddingTop="@dimen/_12dp"
    android:paddingRight="@dimen/_16dp"
    android:paddingBottom="@dimen/_10dp"
    android:layout_marginBottom="1dp">

    <ImageView
        android:id="@+id/img_item_recycler_view_messages"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/btn_user_headset_messages_selected"
        android:paddingRight="@dimen/_10dp"/>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_weight="1"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <TextView
               android:id="@+id/txt_title_recycler_view_messages"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentStart="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentTop="true"
               android:layout_toStartOf="@+id/txt_time_recycler_messages"
               android:layout_toLeftOf="@+id/txt_time_recycler_messages"
               android:maxLines="1"
               android:ellipsize="end"
               android:singleLine="true"
               android:textColor="#4A4A4A"
               android:fontFamily="@font/sf_pro_text_medium"
               android:textSize="@dimen/_16sp"
               android:text="XIAOMI" />

           <TextView
               android:id="@+id/txt_time_recycler_messages"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentEnd="true"
               android:layout_alignParentRight="true"
               android:fontFamily="@font/sf_pro_text_regular"
               android:textColor="#D8D8D8"
               android:textSize="@dimen/_12sp"
               android:layout_weight="1"
               android:gravity="right"
               android:maxLines="1"
               android:singleLine="true"
               android:text="Sep 29, 2019" />

       </RelativeLayout>

       <TextView
           android:id="@+id/txt_recycler_messages"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center|left"
           android:ellipsize="end"
           android:maxLines="1"
           android:singleLine="true"
           android:text="Of"
           android:fontFamily="@font/sf_pro_text_regular"
           android:textSize="@dimen/_12sp"
           android:textColor="#4A4A4A"/>
   </LinearLayout>

</LinearLayout>