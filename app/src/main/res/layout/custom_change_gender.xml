<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bkg_layout_corners_dialog"
    android:gravity="center"
    android:padding="@dimen/_10dp">

    <TextView
        android:id="@+id/txt_title_change_fullname_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_14dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:gravity="center"
        android:text="Update Gender"
        android:fontFamily="@font/sf_pro_display_semibold"
        android:textColor="@color/color_text_title_dialog"
        android:textSize="@dimen/_20sp">
    </TextView>

    <TextView
        android:id="@+id/txt_message_change_fullname_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginBottom="@dimen/_10dp"
        android:text="Update your Gender"
        android:fontFamily="@font/sf_pro_text_regular"
        android:textColor="@color/color_text_messages_dialog"
        android:textSize="@dimen/_16sp">
    </TextView>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

       <RadioGroup
           android:id="@+id/radioGroup"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <RadioButton
               android:id="@+id/checkBox_male"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Male"
               android:textSize="@dimen/_16sp"
               android:fontFamily="@font/sf_pro_text_regular">
           </RadioButton>

           <RadioButton
               android:id="@+id/checkBox_female"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Female"
               android:textSize="@dimen/_16sp"
               android:fontFamily="@font/sf_pro_text_regular">
           </RadioButton>

       </RadioGroup>

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginBottom="@dimen/_10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_dialog_gender"
            android:text="Cancel"
            style="@style/Theme_Button_Cancel_Dialog">
        </Button>


        <Button
            android:id="@+id/btn_update_dialog_gender"
            android:text="Update"
            style="@style/Theme_Button_Update_Dialog">">
        </Button>

    </LinearLayout>



</LinearLayout>