<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="@dimen/_10dp"
        android:paddingTop="@dimen/_20dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingBottom="@dimen/_20dp">

        <TextView
            android:id="@+id/txt_title_dialog_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_20dp"
            android:fontFamily="@font/sf_pro_text_bold"
            android:gravity="center"
            android:text="Select your country"
            android:textColor="@color/color_StatusBar"
            android:textSize="@dimen/_18dp" />

        <EditText
            android:id="@+id/edt_search_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bkg_search_address"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:hint="Country Search"
            android:padding="@dimen/_10dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="@dimen/_20dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel_address"
                style="@style/Theme_Button_Cancel_Dialog"
                android:layout_marginRight="@dimen/_5dp"
                android:text="Cancel">"></Button>


            <Button
                android:id="@+id/btn_select_address"
                style="@style/Theme_Button_Update_Dialog"
                android:layout_marginLeft="@dimen/_5dp"
                android:text="Select">>
            </Button>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>