<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <androidx.cardview.widget.CardView
      android:background="@android:color/white"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:contentPaddingTop="@dimen/_30dp"
      app:contentPaddingBottom="@dimen/_30dp"
      app:contentPaddingLeft="@dimen/_5dp"
      app:contentPaddingRight="@dimen/_5dp"
      app:cardCornerRadius="@dimen/_5dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:gravity="center">

         <TextView
             android:id="@+id/txt_messages_toast_dialog"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:fontFamily="@font/sf_pro_text_medium"
             android:textSize="@dimen/_16sp"
             android:layout_gravity="center"
             android:text="Thông báo"
             android:textColor="@color/color_StatusBar"
             android:gravity="center"/>


         <Button
             android:id="@+id/button_ok_toast_dialog"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:background="@drawable/bkg_btn_click_dang_ky"
             android:text="Yes"
             android:layout_marginTop="@dimen/_16dp"
             android:textAllCaps="false"
             android:textSize="@dimen/_16sp"
             android:textColor="@android:color/white"/>

     </LinearLayout>

  </androidx.cardview.widget.CardView>

</LinearLayout>