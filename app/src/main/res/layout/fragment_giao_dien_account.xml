<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main_register"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:paddingRight="@dimen/_50dp"
    android:paddingLeft="@dimen/_50dp">

    <ImageView
        android:id="@+id/image_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo_register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13">
    </ImageView>

    <TextView
        android:id="@+id/textView_message_tren_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:text="I want to register a new account \nMy phone number is:"
        android:textSize="@dimen/_16dp"
        android:maxLines="2"
        android:textColor="#A1AAB1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_account"
        app:layout_constraintVertical_bias="0.17"/>


    <EditText
        android:id="@+id/editText_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_display_regular"
        android:gravity="center"
        android:hint="Enter your phone numberâ€¦"
        android:inputType="number"
        android:textColor="#4A4A4A"
        android:textSize="@dimen/_20sp"
        android:textColorHint="#D8D8D8"
        android:background="@drawable/ic_edt_under_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_message_tren_edt"
        app:layout_constraintVertical_bias="0.09" />

    <TextView
        android:id="@+id/textView_message_duoi_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/sf_pro_text_regular"
        android:gravity="center"
        android:text="Enter the phone number to receive a new account activation code"
        android:textSize="@dimen/_14dp"
        android:textColor="#A1AAB1"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_account"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/button_account"
        style="@style/style_btn_account"
        android:fontFamily="@font/sf_pro_text_medium"
        android:text="Register"
        android:textSize="@dimen/_16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_account"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/textView_message_duoi_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="I already have an account?"
        android:textSize="@dimen/_14sp"
        android:textColor="#9B9B9B"
        android:fontFamily="@font/sf_pro_text_regular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_account"
        app:layout_constraintVertical_bias="0.2" />

    <LinearLayout
        android:id="@+id/rules_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:textColor="#A1AAB1"
            android:text="Use of the B2PAY application is your acceptance"
            android:textSize="@dimen/_9sp" />

        <TextView
            android:id="@+id/dieu_khoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_medium"
            android:gravity="center"
            android:text="terms and conditions"
            android:textColor="#FFAF23"
            android:textSize="@dimen/_9sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>