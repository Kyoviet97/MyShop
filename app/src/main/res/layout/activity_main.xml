<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view"
    android:gravity="top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/navication_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="@dimen/_4dp"
        android:paddingBottom="@dimen/_4dp"
        android:paddingRight="@dimen/_2dp"
        android:background="@color/color_StatusBar"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_btn_back_navigation"
            android:layout_width="@dimen/_10dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_navigation"
            android:layout_marginRight="@dimen/_16dp"
            android:layout_marginLeft="@dimen/_16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/searchView_Navigation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30dp"
            android:drawableLeft="@drawable/ic_search"
            android:background="@drawable/bkg_search_color_white"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:paddingLeft="@dimen/_10dp"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_6dp"
            android:layout_toStartOf="@+id/img_shopping_cart"
            android:layout_toLeftOf="@+id/img_shopping_cart"
            android:layout_toEndOf="@+id/img_btn_back_navigation"
            android:layout_toRightOf="@+id/img_btn_back_navigation"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/img_shopping_cart"
            android:layout_width="@dimen/_55dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_shopping_cart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/content_home_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </FrameLayout>



    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/shadow_layout"
        app:layout_constraintBottom_toTopOf="@+id/button_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"/>


    <LinearLayout
        android:id="@+id/button_navigation"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="center"
        android:background="@color/navigation_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/_5dp"
        android:paddingTop="1dp"
        android:paddingRight="@dimen/_5dp"
        android:paddingBottom="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/content_home_frame_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_home"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/ic_btn_home_selected"
                android:onClick="ClickButton"></Button>
        </LinearLayout>


        <LinearLayout
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_message"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/ic_btn_mess"
                android:onClick="ClickButton"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_oders"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/ic_btn_orders"
                android:onClick="ClickButton"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_update"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/ic_btn_update"
                android:onClick="ClickButton"></Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/btn_account"
                android:layout_width="@dimen/_50dp"
                android:layout_height="@dimen/_50dp"
                android:background="@drawable/ic_btn_accound"
                android:onClick="ClickButton"></Button>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>