<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_browse_categories_left"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_browse_categories_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:paddingTop="@dimen/_10dp"
        android:paddingRight="@dimen/_10dp"
        android:paddingLeft="@dimen/_10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_browse_categories"/>

    <TextView
        android:id="@+id/txt_browse_categories_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:gravity="center"
        android:paddingTop="@dimen/_5dp"
        android:textSize="@dimen/_8sp"
        android:paddingRight="@dimen/_4dp"
        android:paddingLeft="@dimen/_4dp"
        android:paddingBottom="@dimen/_10dp"
        android:textColor="#4A4A4A"
        android:text="Computer"
        android:fontFamily="@font/sf_pro_text_regular"/>
</LinearLayout>