<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_quantity_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textColor="#4A4A4A"
        android:fontFamily="@font/sf_pro_text_semibold"
        android:textSize="@dimen/_14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingTop="@dimen/_12dp"
        android:paddingBottom="@dimen/_8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_lost_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_difference_item_detail"/>

        <TextView
            android:id="@+id/txt_sold_item_to_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textSize="@dimen/_14sp"
            android:paddingLeft="@dimen/_15dp"
            android:paddingRight="@dimen/_15dp"
            android:text="1"
            android:textColor="#4A4A4A"/>

        <ImageView
            android:id="@+id/img_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_plus_item_detail"/>

        <TextView
            android:id="@+id/total_sold_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_text_regular"
            android:textSize="@dimen/_14sp"
            android:paddingLeft="@dimen/_15dp"
            android:hint="Loading..."
            android:textColor="#4A4A4A"/>


    </LinearLayout>

</LinearLayout>