<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center"
    android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/_30dp"
            android:paddingBottom="@dimen/_30dp"
            android:paddingLeft="@dimen/_24dp"
            android:paddingRight="@dimen/_24dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_custom_toast_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tick_green_toast_dialog"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_title_custom_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oops! Connection Lost"
                android:paddingTop="@dimen/_18dp"
                android:paddingBottom="@dimen/_20dp"
                android:gravity="center"
                android:fontFamily="@font/sf_pro_display_semibold"
                android:textColor="#9B9B9B"
                android:textSize="@dimen/_16sp"
                android:layout_gravity="center"/>

            <LinearLayout
                android:id="@+id/main_layout_button_custom_toast_dialog"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_46dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="@drawable/bkg_button_custom_toast_dialog">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="@dimen/_16dp"
                    android:src="@drawable/ic_sync_button_dialog"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Reload Page"
                    android:fontFamily="@font/sf_pro_text_semibold"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/_14sp"
                    android:gravity="center"/>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>