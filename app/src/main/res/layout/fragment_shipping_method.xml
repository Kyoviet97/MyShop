<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_main_bkg">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/_12dp"
                android:paddingBottom="@dimen/_12dp"
                android:paddingRight="@dimen/_16dp"
                android:paddingLeft="@dimen/_16dp"
                android:layout_marginTop="@dimen/_22dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Color, Band, Ships From"
                        android:textSize="@dimen/_15sp"
                        android:fontFamily="@font/sf_pro_text_semibold"
                        android:textColor="#4A4A4A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silver Aluminum with Sport Band"
                        android:textSize="@dimen/_13sp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textColor="#4A4A4A"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:paddingTop="@dimen/_12dp"
                android:paddingBottom="@dimen/_12dp"
                android:paddingRight="@dimen/_16dp"
                android:paddingLeft="@dimen/_16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Color, Band, Ships From"
                        android:textSize="@dimen/_15sp"
                        android:fontFamily="@font/sf_pro_text_semibold"
                        android:textColor="#4A4A4A"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Silver Aluminum with Sport Band"
                        android:textSize="@dimen/_13sp"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:textColor="#4A4A4A"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_chevron_right"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/transparent"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/_12dp"
                android:paddingBottom="@dimen/_12dp"
                android:paddingRight="@dimen/_16dp"
                android:paddingLeft="@dimen/_16dp"
                android:background="@color/white">

                <com.gvtechcom.myshop.Utils.QuantityView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </com.gvtechcom.myshop.Utils.QuantityView>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shipping Method"
                android:paddingTop="@dimen/_12dp"
                android:paddingBottom="@dimen/_10dp"
                android:paddingLeft="@dimen/_16dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textSize="@dimen/_16sp"
                android:textColor="#4A4A4A"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_shipping_method"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Package Specifications"
                android:paddingTop="@dimen/_12dp"
                android:paddingBottom="@dimen/_10dp"
                android:paddingLeft="@dimen/_16dp"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textSize="@dimen/_16sp"
                android:textColor="#4A4A4A"/>

            <include layout="@layout/include_pack_shipping_method"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginTop="@dimen/_30dp"
                android:background="@color/color_StatusBar"
                android:textAllCaps="false"
                android:text="Apply"
                android:fontFamily="@font/sf_pro_text_semibold"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/white"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>