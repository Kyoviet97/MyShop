<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5dp"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/_8dp"
        app:cardPreventCornerOverlap="false"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_just_for_you"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_just_for_you_four"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="@dimen/_10dp"
                android:paddingTop="@dimen/_4dp"
                android:paddingLeft="@dimen/_4dp"
                android:paddingRight="@dimen/_4dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txt_info_just_for_you"
                        android:fontFamily="@font/sf_pro_text_regular"
                        android:layout_weight="1"
                        style="@style/Style_textView_info_item_just_for_you"
                        android:maxLines="1"
                        android:text="Vention Thunderbolt 3 Dock USB Hub Type C..." />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/sf_pro_text_regular"
                        style="@style/Style_textView_info_item_just_for_you"
                        android:text="..."/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txt_price_just_for_you"
                    android:fontFamily="@font/sf_pro_text_bold"
                    style="@style/Style_textView_price_item_just_for_you"
                    android:text="$21.80 - 45.90" />

                <TextView
                    android:id="@+id/txt_sold_just_for_you"
                    android:text="2265 sold"
                    android:fontFamily="@font/sf_pro_text_regular"
                    style="@style/Style_textView_sold_item_just_for_you"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>