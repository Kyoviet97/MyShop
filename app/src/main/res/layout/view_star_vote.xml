        android:fontFamily="@font/awesome_5pro_solid"
        android:text="@string/oneStar"/>

    <TextView
        android:id="@+id/star_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EB3B5A"
        android:layout_marginRight="@dimen/_2dp"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/awesome_5pro_solid"
        android:text="@string/oneStar"/>

    <TextView
        android:id="@+id/star_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EB3B5A"
        android:layout_marginRight="@dimen/_2dp"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/awesome_5pro_solid"
        android:text="@string/oneStar"/>

    <TextView
        android:id="@+id/star_fine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#EB3B5A"
        android:textSize="@dimen/_14sp"
        android:fontFamily="@font/awesome_5pro_solid"
        android:text="@string/oneStar"/>

</LinearLayout>