<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/_8dp"
        android:layout_height="?actionBarSize"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_back_update_fragment"
            style="@style/st_image_back_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_back_navigation" />

        <TextView
            android:id="@+id/txt_shipping_address"
            android:layout_width="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_height="?actionBarSize"
            android:gravity="center"
            android:fontFamily="@font/sf_pro_text_medium"
            android:text="Update &amp; Notification"
            android:textColor="#4A4A4A"
            android:textSize="@dimen/_16sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_3dp"
        android:background="@drawable/shadow_layout">
    </View>


    <FrameLayout
        android:id="@+id/frame_update_manager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>