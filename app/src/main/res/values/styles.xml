<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_edt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Theme_dialog_toast" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/progress_round_border</item>
    </style>

    <style name="style_btn_account">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bkg_btn_click_dang_ky</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Theme_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_dialog_address" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme_Button_Cancel_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/_2dp</item>
        <item name="android:textColor">@color/color_text_cancel_dialog</item>
        <item name="android:background">@drawable/bkg_btn_cancel_account</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sf_ui_display_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme_Button_Update_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginRight">@dimen/_2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bkg_btn_update_account</item>
        <item name="android:fontFamily" tools:ignore="NewApi">@font/sf_ui_display_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme_Edt_Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/ic_edt_boder_change_fullname</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:paddingLeft">@dimen/_10dp</item>
        <item name="android:layout_marginBottom">@dimen/_14dp</item>
        <item name="singleLine">true</item>
        <item name="android:textColorHint">@color/color_txt_hint_edt</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">#7ED321</item>
    </style>

    <style name="Style_textView_shipping">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textColor">@color/color_text_main_shipping_address</item>
    </style>

    <style name="Style_edt_shipping">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#0F0F0F</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>

    <style name="Style_txt_shipping_address">
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingRight">@dimen/_20dp</item>
        <item name="android:textColor">#0F0F0F</item>
        <item name="android:ellipsize">end</item>
        <item name="android:drawableRight">@drawable/ic_chevron_right</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">@dimen/_4dp</item>
        <item name="android:paddingBottom">@dimen/_4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_16sp</item>
    </style>


    <style name="Style_textView_menu_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_textView_menu_home</item>
        <item name="android:textSize">@dimen/_11sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Style_textView_count_down_timer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bkg_textview_count_down_timer</item>
        <item name="android:padding">1.5dp</item>
        <item name="android:layout_marginLeft">@dimen/_2dp</item>
    </style>


    <style name="Style_textView_count_down_timer_item_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bkg_textview_count_down_timer</item>
        <item name="android:padding">1.5dp</item>
        <item name="android:layout_marginLeft">@dimen/_2dp</item>
    </style>


    <style name="Style_textView_top_selection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/color_textView_menu_home</item>
        <item name="android:textSize">@dimen/_12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center</item>
        <item name="android:paddingLeft">@dimen/_2dp</item>
    </style>


    <style name="Style_textView_info_item_just_for_you">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">2</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">@dimen/_11sp</item>
    </style>


    <style name="Style_textView_price_item_just_for_you">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">left|center</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:textSize">@dimen/_13sp</item>
    </style>


    <style name="Style_textView_sold_item_just_for_you">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">right|center</item>
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">@dimen/_11sp</item>
    </style>


</resources>
